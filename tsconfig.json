{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist",
    "downlevelIteration": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
